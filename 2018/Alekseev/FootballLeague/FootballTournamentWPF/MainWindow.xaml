        <Button x:Name="LoadButton" Content="Load" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="184,306,0,0" Click="LoadButton_Click" Visibility="Visible"/>
        <Button x:Name="ExitButton" Content="Exit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="184,345,0,0" Click="ExitButton_Click" Visibility="Visible"/>
        <Button x:Name="HorizontalDisplayButton" Content="Horizontally" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="294,291,0,0" Click="HorizontalDisplayButton_Click" Visibility="Visible"/>
        <Button x:Name="VerticalDisplayButton" Content="Vertically" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="294,255,0,0" Click="VerticalDisplayButton_Click" Visibility="Visible"/>

    </Grid>
</Window>
